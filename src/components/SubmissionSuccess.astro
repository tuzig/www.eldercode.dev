---
import "@/index.css";
import Button from "@/components/ui/button.astro";
import Card from "@/components/ui/card.astro";
import CardContent from "@/components/ui/CardContent.astro";
import CheckCircle2 from "@/components/icons/CheckCircle2.astro";
---

<div class="min-h-screen bg-dark-bg flex items-center justify-center">
  <div class="container mx-auto px-4 py-20">
    <div class="max-w-md mx-auto">
      <Card class="bg-dark-surface border-dark-border text-center animate-fade-in">
        <div class="p-8">
          <div class="mx-auto bg-cyan/10 p-3 rounded-full w-fit border border-cyan/20">
            <CheckCircle2 class="h-12 w-12 text-cyan" />
          </div>
          <h1 class="text-3xl font-display font-bold mt-6">Submission Received!</h1>
          <div class="mt-6 space-y-6">
            <p class="text-lg text-dark-text-secondary">
              Thank you for filling the form. Please check your email for a confirmation and next steps.
            </p>
            <Button
              as="a"
              href="/"
              size="lg"
              class="w-full bg-gradient-to-r from-cyan to-purple-500 hover:from-cyan-600 hover:to-purple-600 text-dark-bg font-mono uppercase tracking-wide py-6"
            >
              Return to Homepage
            </Button>
          </div>
        </div>
      </Card>
    </div>
  </div>
</div>
